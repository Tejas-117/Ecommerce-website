{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/((?!.*\\.\\w+$).*)",
      "dest": "server.js"
    },
    {
      "src": "/((?!.*\\.\\w+$).*)",
      "dest": "public/index.html"
    },
    {
      "src": "/(.+\\.[a-z]+)$",
      "dest": "public/$1"
    }
  ]
}